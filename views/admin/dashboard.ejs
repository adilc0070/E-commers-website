      <div class="row">
        <div class="col-12 grid-margin">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Order Status</h4>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>
                        <div
                          class="form-check form-check-muted m-0">
                          <label
                            class="form-check-label">
                            <input type="checkbox"
                              class="form-check-input">
                          </label>
                        </div>
                      </th>
                      <th>Client Name</th>
                      <th>Order No</th>
                      <th>Product Cost</th>
                      <th>Products</th>
                      <th>Payment Mode</th>
                      <th>Start Date</th>
                      <th>Delivery Address</th>
                      <th>Order Status</th>
                      <th>Action</th>
                      <!-- Added Action column for changing order status -->
                    </tr>
                  </thead>
                  <tbody>
                    <% orders.forEach(order=> { %>
                    <tr>
                      <td>
                        <div
                          class="form-check form-check-muted m-0">
                          <label
                            class="form-check-label">
                            <input type="checkbox"
                              class="form-check-input">
                          </label>
                        </div>
                      </td>
                      <td>
                        <span class="pl-2">
                          <%= order.userId.name %>
                        </span>
                      </td>
                      <td>
                        <%= order._id %>
                      </td>
                      <td>$<%= order.amount %>
                      </td>
                      <td>
                        <!-- Assuming order.products is an array of products in the order -->
                        <%
                        order.products.forEach(product=>
                        { %>
                        <p>Product: <%=
                          product.product_name %>,
                             
                          Quantity: <%=
                          product.quantity %>
                        </p>
                        <% }) %>
                      </td>
                      <td>
                        <%= order.paymentType %>
                      </td>
                      <td>
                        <%= order.date.toLocaleDateString('en-US', { year:'numeric', month: 'short', day: '2-digit'}).replace(/\//g, '-') %>
                      </td>
                      <td>
                        Name:<%= order.address.firstName %> <%= order.address.lastName %>
                        <br>
                        Address: <%= order.address.address %>, <%= order.address.city %>,
                        <br>
                         <%= order.address.state %>,
                        <br>
                         Pin: <%= order.address.pin %>
                        <br>
                        Phone: <%= order.address.phone %>
                        <br>
                        Email: <%= order.address.email %>
                        <br>
                        Additional Info: <%= order.address.additional %>

                      </td>
                      <td>
                        <div class="badge 
                            <%= order.status === 'delivered' ? 'badge-outline-success' : 
                              (order.status === 'pending' ? 'badge-outline-warning' : 
                              (order.status === 'rejected' ? 'badge-outline-danger' : 
                              (order.status === 'shipped' ? 'badge-outline-info' : ''))) %>">
                            <span class="order-status" data-order-id="<%= order._id %>">
                                <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                            </span>
                        </div>
                      </td>   
                                       
                      <td>
                        <!-- Select box for changing order status -->
                        <select class="form-select"
                          id="orderStatus<%= order._id %>"
                          onchange="changeOrderStatus('<%= order._id %>') ">
                          <option value="delivered"
                            <%=order.status==='delivered'
                            ? 'selected' : '' %>
                            >Approved</option>
                          <option value="pending"
                            <%=order.status==='pending'
                            ? 'selected' : '' %>
                            >Pending</option>
                          <option value="rejected"
                            <%=order.status==='rejected'
                            ? 'selected' : '' %>
                            >Rejected</option>
                          <option value="shipped"
                            <%=order.status==='shipped'
                            ? 'selected' : '' %>
                            >Shipped</option>
                        </select>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

